# Farther Prism - Database Environment Variables
# Copy this file to .env and update values

# PostgreSQL Configuration
DB_NAME=farther_prism
DB_USER=prism_api
DB_PASSWORD=changeme_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Connection String (for application)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# pgAdmin (optional, only if using --profile admin)
PGADMIN_EMAIL=admin@farther.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis (optional, only if using --profile full)
REDIS_PASSWORD=changeme_redis_password
REDIS_PORT=6379

# Application Settings
NODE_ENV=development
API_PORT=3000

# Anthropic API (for AI features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Email (SMTP for notifications)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=Ledger@The-AI-Team.io
SMTP_PASSWORD=your_smtp_password_here
SMTP_SECURE=true

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_MONTE_CARLO=true
ENABLE_OPTIMIZATION=false
ENABLE_RECOMMENDATIONS=true
